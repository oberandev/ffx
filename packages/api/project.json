{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api/src",
  "projectType": "library",
  "targets": {
    "build": {
      "command": "packages/api/build"
    },
    "format:check": {
      "command": "yarn prettier ./**/*.{mts,ts} --check",
      "dependsOn": []
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/api/**/*.mts",
          "packages/api/**/*.ts",
          "packages/api/package.json"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs api {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "coverage": true,
        "passWithNoTests": false,
        "reporters": ["json"],
        "reportsDirectory": "../../coverage/packages/api"
      },
      "configurations": {
        "watch": {
          "watch": true
        }
      }
    }
  },
  "tags": []
}
