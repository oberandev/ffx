{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "assets": ["{projectRoot}/*.md"],
        "bundle": false,
        "format": ["esm"],
        "generatePackageJson": true,
        "main": "{projectRoot}/src/index.ts",
        "metafile": true,
        "outputPath": "{workspaceRoot}/dist",
        "skipTypeCheck": true,
        "sourcemap": "linked",
        "tsConfig": "{projectRoot}/tsconfig.lib.json"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs api {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/api/**/*.ts", "packages/api/package.json"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/api"
      }
    }
  },
  "tags": []
}
