{
  "name": "ffx-guards",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ffx-guards/src",
  "projectType": "library",
  "targets": {
    "build": {
      "command": "packages/ffx-guards/build"
    },
    "format:check": {
      "command": "prettier packages/ffx-guards/**/*.{js,mts,ts} --check"
    },
    "lint": {
      "command": "eslint packages/ffx-guards/**/*.{js,mts,ts}"
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ffx-guards {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/ffx-guards"
      }
    }
  },
  "tags": []
}
