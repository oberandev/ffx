{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": false,
    "lib": ["es2020", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@ffx/api": ["packages/ffx-api/src/index.mts"],
      "@ffx/cli": ["packages/ffx-cli/src/index.mts"],
      "@ffx/guards": ["packages/ffx-guards/src/index.mts"],
      "@ffx/logger": ["packages/ffx-logger/src/index.mts"],
      "@ffx/orm": ["packages/ffx-orm/src/index.mts"],
      "@ffx/parser-address-geocodio": ["packages/ffx-parser-address-geocodio/src/index.mts"],
      "@ffx/parser-uuid": ["packages/ffx-parser-uuid/src/index.mts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["node_modules", "tmp"]
}
